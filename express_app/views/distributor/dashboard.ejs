<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Distributor Dashboard</title>
</head>
<body>
  <h1>Welcome, <%= distributor.name %>!</h1>
  <h2>Available Products in Your Area</h2>
  <table>
    <thead>
      <tr>
        <th>Product Name</th>
        <th>Price</th>
        <th>Farmer Name</th>
        <th>Farmer Phone</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% products.forEach(function(product) { %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.price %></td>
          <td><%= product.farmer.name %></td>
          <td><%= product.farmer.phone %></td>
          <td>
            <form action="/purchase" method="POST">
              <input type="hidden" name="productId" value="<%= product._id %>">
              <label for="quantity">Quantity:</label>
              <select id="quantity" name="quantity">
                <% for (var i = 1; i <= 10; i++) { %>
                  <option value="<%= i %>"><%= i %></option>
                <% } %>
              </select>
              <button type="submit">Buy</button>
            </form>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  <h2>Farmer List</h2>
  <table>
    <thead>
      <tr>
        <th>Farmer Name</th>
        <th>Farmer Phone</th>
        <th>Farmer Address</th>
      </tr>
    </thead>
    <tbody>
      <% farmers.forEach(function(farmer) { %>
        <tr>
          <td><%= farmer.name %></td>
          <td><%= farmer.phone %></td>
          <td><%= farmer.address.street %>, <%= farmer.address.city %>, <%= farmer.address.state %> <%= farmer.address.zipcode %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  <h2>Purchased Products</h2>
  <table>
    <thead>
      <tr>
        <th>Product Name</th>
        <th>Price</th>
        <th>Farmer Name</th>
        <th>Farmer Phone</th>
      </tr>
    </thead>
    <tbody>
      <% purchasedProducts.forEach(function(product) { %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.price %></td>
          <td><%= product.farmer.name %></td>
          <td><%= product.farmer.phone %></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
  <form action="/logout" method="POST">
    <button type="submit">Logout</button>
  </form>
</body>
</html>
