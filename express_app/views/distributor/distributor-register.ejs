<!-- distributor/register.ejs -->
<html>
    <head>
        <title> Distributor Register</title>

    </head>
    <body>
        <h1>Distributor Registration</h1>

<form action="/distributor-register" method="POST">
  <label for="name">Name:</label>
  <input type="text" id="name" name="name" required><br><br>

  <label for="phone">Phone:</label>
  <input type="text" id="phone" name="phone" pattern="[0-9]{10}" required><br><br>

  <label for="address">Zip Code:</label>
  <input type="text" id="address" name="address" pattern="[0-9]{6}" required><br><br>

  <button type="submit">Register</button>
</form>

    </body>
</html>

  